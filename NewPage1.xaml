<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MA_L6.NewPage1"
             Title="О продукте">
    <ScrollView>
    <VerticalStackLayout Margin="8,8">
        
        <Image x:Name="ProdImage" Aspect="AspectFit" HeightRequest="500"/>

            <Label x:Name="ProductNameLabel" FontSize="24"/>
            <Label x:Name="BrandNameLabel" TextColor="Gray" />

            <Button x:Name="AddToFavBtn" Clicked="OnClick_AddToFav"/>


        <Label Text="Масса:" TextColor="Gray"/>
        <Label x:Name="QuantityLabel" Text="" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="3"/>

        <Grid RowDefinitions="*,*,*"
                          ColumnDefinitions="*,*,*,*"
                          RowSpacing="5"
                          ColumnSpacing="10" HorizontalOptions="Fill" VerticalOptions="Fill">
            <Label Text="Пищевая ценность за 100 г:" TextColor="Gray"  Grid.Column="0" Grid.Row="0" />
            
            <Label x:Name="Label_100_Carbohydrates" Text="Не указано" Grid.Column="0" Grid.Row="1" TextColor="{AppThemeBinding Light=Black, Dark=White}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Label Text="Углеводы" Grid.Column="0" Grid.Row="2" TextColor="Gray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

            <Label x:Name="Label_100_Fat" Text="Не указано" Grid.Column="1" Grid.Row="1"  TextColor="{AppThemeBinding Light=Black, Dark=White}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Label Text="Жиры" Grid.Column="1" Grid.Row="2" TextColor="Gray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

            <Label x:Name="Label_100_Proteins" Text="Не указано" Grid.Column="2" Grid.Row="1"  TextColor="{AppThemeBinding Light=Black, Dark=White}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Label Text="Белки" Grid.Column="2" Grid.Row="2" TextColor="Gray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

            <Label x:Name="Label_100_Energy" Text="Не указано" Grid.Column="3" Grid.Row="1"  TextColor="{AppThemeBinding Light=Black, Dark=White}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Label Text="Калор-сть" Grid.Column="3" Grid.Row="2" TextColor="Gray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        </Grid>

        <Label Text="Ингредиенты:" TextColor="Gray"/>
        <Label x:Name="Label_Ingridients" Text="Не указано"/>
        
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>